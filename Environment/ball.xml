<mujoco>
<option gravity="0 0 -9.81"/>

<asset>
<texture name="checks_floor" builtin="checker" type="2d" width="256" height="256" rgb1="1 1 1" rgb2="0 0 0"/>
<material name="floor_mat" texture="checks_floor" texrepeat="2 2" texuniform="true"/>
<texture name="checks_ball" builtin="checker" type="2d" width="256" height="256" rgb1="1 0 0" rgb2="0 1 0"/>
<material name="ball_mat" texture="checks_ball" texrepeat="2 2" texuniform="true"/>
</asset>
<worldbody>
<geom name="wall1" type="box" size="2 0.1 0.5" pos="0 -2 0.5" rgba="0.6 0.6 0.6 1"/>
<geom name="wall2" type="box" size="2 0.1 0.5" pos="0 2 0.5" rgba="0.6 0.6 0.6 1"/>
<geom name="wall3" type="box" size="0.1 2 0.5" pos="-2 0 0.5" rgba="0.6 0.6 0.6 1"/>
<geom name="wall4" type="box" size="0.1 2 0.5" pos="2 0 0.5" rgba="0.6 0.6 0.6 1"/>
<geom type="plane" size="5 5 0.1" material="floor_mat"/>
<body name="ball" pos="-1 0 0.5">
<joint name="jx" type="slide" axis="1 0 0"/>
<joint name="jz" type="slide" axis="0 0 1"/>
<joint name="jy" type="slide" axis="0 1 0"/>
<geom type="sphere" size="0.1" material="ball_mat"/>
</body>

<body name="fixed_box" pos="0.5 0 0.1">
<geom type="box" size="0.1 0.1 0.1" rgba="0.95 0.95 0 1"/>
 <freejoint/> 
</body>
</worldbody>

<actuator>
<motor joint="jx" gear="2"/>
<motor joint="jz" gear="2"/>
</actuator>

